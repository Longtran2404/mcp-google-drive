{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "process": "readonly",
    "console": "readonly",
    "Buffer": "readonly"
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-template": "error",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/"
  ]
}
